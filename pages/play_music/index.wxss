view {
  box-sizing: border-box;
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -2;
  width: 100%;
  height: 100%;
}
.bg image {
  width: 100%;
  height: 100%;
}
.bg_bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: rgba(253, 253, 253, 0.1);
  filter: blur(100px);
}

/* pages/play_music/index.wxss */

.tit {
  display: flex;
}
.left {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left image{
  width: 60%;
  display: block;
}
.center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.center view {
  padding: 0 30rpx;
  color: rgba(0,0,0, .4);
}
.right {
  width: 80rpx;
}
.darkcolor {
  color: rgb(228, 214, 214) !important;
}
.gequ {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}
.gq_image {
  flex: 4;
  padding: 40rpx  20rpx 0 20rpx;
  margin: 0 auto;
  width: 100%;
}
.gq_image image {
  width: 100%;
}
.gq_title{
  flex: 1;
}
.gq_title view {
  padding-left: 20rpx;
}
.gq_title view:nth-child(1) {
  font-size: 36rpx;
}
.gq_title view:last-child {
  font-size: 30rpx;
}


.song {
  flex: 1;
  text-align: center;
  color: aquamarine;
}
.gq_process {
  flex: 1;
}

.anniu {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-bottom: 40rpx;
}
.anniu image {
  width: 10%;
  height: 58rpx;
}

.slidertext {
  display: flex;
  justify-content: space-between;
}
.scrolly {
  height: 100%;
  width: 80%;
  margin: 0 auto;
  text-align: center;
}
.txt {
  line-height: 35px;
}
.active {
  color: rgb(209, 73, 175);
  font-size: 40rpx;
}